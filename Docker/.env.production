# Production Environment Variables
NODE_ENV=production

# Database Configuration
DATABASE_URL="postgresql://username:password@production-db-host:5432/codeguardian_pro"

# GitHub OAuth Configuration
GITHUB_CLIENT_ID="prod_github_client_id_here"
GITHUB_CLIENT_SECRET="prod_github_client_secret_here"
GITHUB_CALLBACK_URL="https://yourdomain.com/api/auth/github/callback"

# Google OAuth Configuration
GOOGLE_CLIENT_ID="prod_google_client_id_here"
GOOGLE_CLIENT_SECRET="prod_google_client_secret_here"
GOOGLE_CALLBACK_URL="https://yourdomain.com/api/auth/google/callback"

# Gemini AI Configuration
GEMINI_API_KEY="prod_gemini_api_key_here"
GEMINI_MODEL="gemini-1.5-pro"

# Google AdSense Configuration
ADSENSE_CLIENT_ID="prod_adsense_client_id_here"
ADSENSE_SLOT_HEADER="prod_header_slot_id"
ADSENSE_SLOT_SIDEBAR="prod_sidebar_slot_id"
ADSENSE_SLOT_CONTENT="prod_content_slot_id"

# File Upload Configuration
MAX_FILE_SIZE="50MB"
ALLOWED_FILE_TYPES=".js,.ts,.jsx,.tsx,.json,.html,.css,.py,.java,.cpp,.c,.php,.rb,.go,.rs"

# Session Configuration
SESSION_SECRET="prod_session_secret_key_here"
SESSION_MAX_AGE=86400

# CORS Configuration
CORS_ORIGIN="https://yourdomain.com"
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security Configuration
JWT_SECRET="prod_jwt_secret_here"
JWT_EXPIRES_IN="7d"

# Email Configuration (Optional)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your_email@gmail.com"
SMTP_PASS="your_app_password"

# Analytics Configuration
ANALYTICS_ID="prod_analytics_id"
TRACKING_ENABLED=true

# Cache Configuration
REDIS_URL="redis://prod-redis-host:6379"
CACHE_TTL=3600

# CDN Configuration
CDN_URL="https://cdn.yourdomain.com"
UPLOAD_CDN_ENABLED=true

# Monitoring
LOG_LEVEL="warn"
SENTRY_DSN="prod_sentry_dsn_here"

# Performance
COMPRESSION_ENABLED=true
CACHE_HEADERS_ENABLED=true

# API Configuration
API_RATE_LIMIT=100
API_TIMEOUT=30000

# Frontend Configuration
NEXT_PUBLIC_APP_URL="https://yourdomain.com"
NEXT_PUBLIC_API_URL="https://api.yourdomain.com"

# Feature Flags
FEATURE_AI_ANALYSIS=true
FEATURE_GITHUB_UPLOAD=true
FEATURE_GOOGLE_DRIVE_UPLOAD=true
FEATURE_AD_INTEGRATION=true
FEATURE_PREMIUM_FEATURES=false

# Payment Configuration (Future)
STRIPE_SECRET_KEY="prod_stripe_secret_key"
STRIPE_WEBHOOK_SECRET="prod_webhook_secret"

# External Services
GITHUB_API_BASE="https://api.github.com"
GOOGLE_DRIVE_API_BASE="https://www.googleapis.com/drive/v3"
GEMINI_API_BASE="https://generativelanguage.googleapis.com"

# Deployment
VERCEL_PROJECT_ID="prod_vercel_project_id"
VERCEL_TEAM_ID="prod_vercel_team_id"

# Health Checks
HEALTH_CHECK_TIMEOUT=30000
READINESS_CHECK_ENABLED=true

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"

# SSL Configuration
SSL_ENABLED=true
SSL_CERT_PATH="/etc/ssl/certs/yourdomain.crt"
SSL_KEY_PATH="/etc/ssl/private/yourdomain.key"